<configuration>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
     	<encoder>
			<pattern>%date %level [%file:%line] [%X{first}] %msg%n</pattern>
		</encoder>
		<!-- <file>/home/sarju/innotrust/ApiService1/logs/log.log</file> -->
		<file>/home/sarju/innotrust/ApiService1/logs/log.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			  <fileNamePattern>/home/sarju/innotrust/ApiService1/logs/log.%d{yyyy-MM-dd}.log</fileNamePattern> 
			<maxHistory>30</maxHistory>
			<totalSizeCap>10GB</totalSizeCap>
		</rollingPolicy>
	</appender>
	<logger name="org.springframework" level="INFO"></logger>
	<logger name="com.zaxxer.hikari" level="INFO"></logger>
	<logger name="org.apache.http" level="INFO"></logger>
	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>
</configuration>